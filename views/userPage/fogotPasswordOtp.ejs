        <script>

          $ ("#verifyotp").validate({

                rules:{

                     otp:{

                         required:true

                     }
                },

                submitHandler: async (form, event) => {
                      event.preventDefault()
                      let otp = {
                        otp: form.otp.value
                      }
                      


                      let response = await fetch('/forgotPasswordVerifyOtp', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(otp)
                      })

                      const result = await response.json()
                      if (result.otpVerified) {
                        await Swal.fire({
                          icon: "success",
                          title: "OTP verification Successfull",
                          showConfirmButton: false,
                          timer: 1500
                        });
                      window.location.href = '/forgotPasswordGetPasswordPage'

                    }if(result.otpInvalid){

                        await Swal.fire({
                          icon: "error",
                          title: "Invalid OTP",
                          showConfirmButton: false,
                          timer: 1500
                        });

                         
                    }

             }
           })

</script>



     
    <script>
         

        let countDown = 60;
        const timerDisplay = document.getElementById('timer')


        function startTimer() {

            const intervalId = setInterval(() => {

                countDown--;
                if (countDown <= 0) {
                    clearInterval(intervalId)
                    timerDisplay.textContent = 'Resend OTP'
                   document.getElementById('verifyOTP').style.display = 'none'
                 document.getElementById('resendotp').style.display  = 'block'

                } else {



                    const minutes = Math.floor(countDown / 60)
                    const seconds = countDown % 60;



                    const formattedMinutes = minutes < 10 ? "0" + minutes : minutes;
                    const formattedSeconds = seconds < 10 ? "0" + seconds : seconds;

                    timerDisplay.textContent = `Timer Remaining in ${formattedMinutes}:${formattedSeconds}`
                }
            }, 1000)

              
        }

        window.onload = startTimer;


         document.getElementById('resendotp').addEventListener('click',fnResend)

         async function fnResend(){

         let response = await fetch('/forgotPasswordresendotp',{
             method:"POST",
             headers:{'Content-Type':"application/json"}
         })


         const result = await response.json()

         if(result.otpsend){

             await Swal.fire({
                 icon:"Succes",
                 title:"New OTP Generated",
                 showConfirmButton:false,
                 timer:1500
             })
             window.location.href = '/otp'
         }
    }

