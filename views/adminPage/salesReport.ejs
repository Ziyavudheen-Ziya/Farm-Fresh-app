<%- include('../adminPartials/adminheader') %>

<style>
    .total-table {
    margin-top: 20px;
    border-collapse: collapse;
    width: 100%;
  }
  
  .total-header {
    color: red;
    background-color: rgb(255, 255, 255);
    width: 800px;
    font-weight: bolder;
  }
  
