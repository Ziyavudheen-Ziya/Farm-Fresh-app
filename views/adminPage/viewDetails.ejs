<%- include('../adminpartials/adminheader') %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Molla - Bootstrap eCommerce Template</title>
    <meta name="keywords" content="HTML5 Template" />
    <meta name="description" content="Molla - Bootstrap eCommerce Template" />
    <meta name="author" content="p-themes" />
    <!-- Favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="assets/images/icons/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="assets/images/icons/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="assets/images/icons/favicon-16x16.png" />
    <link rel="manifest" href="assets/images/icons/site.html" />
    <link rel="mask-icon" href="assets/images/icons/safari-pinned-tab.svg" color="#666666" />
    <link rel="shortcut icon" href="assets/images/icons/favicon.ico" />
    <meta name="apple-mobile-web-app-title" content="Molla" />
    <meta name="application-name" content="Molla" />
    <meta name="msapplication-TileColor" content="#cc9966" />
    <meta name="msapplication-config" content="assets/images/icons/browserconfig.xml" />
    <meta name="theme-color" content="#ffffff" />
    <!-- Plugins CSS File -->
    <link rel="stylesheet" href="assets/css/bootstrap.min.css" />
    <!-- Main CSS File -->
    <link rel="stylesheet" href="assets/css/style.css" />
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
            display: flex;
        }

        header, footer {
            background-color: #343a40;
            color: white;
            padding: 10px;
            text-align: center;
            width: 100%;
        }

        .sidebar {
            width: 250px;
            background-color: #343a40;
            color: white;
            padding: 15px;
            position: fixed;
            height: 100%;
            top: 0;
            left: 0;
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .sidebar a {
            color: white;
            text-decoration: none;
            display: block;
            padding: 10px;
            border-radius: 4px;
            margin-bottom: 10px;
        }

        .sidebar a:hover {
            background-color: #495057;
        }

        .main-content {
            margin-left: 260px;
            flex-grow: 1;
            padding: 30px;
        }

        .orders-container {
            width: 100%;
            background-color: #fff;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            padding: 30px;
            margin-top: 20px;
            margin-bottom: 20px;
        }

        h1, h2 {
            color: #007bff;
            text-align: center;
        }

        .order-details {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .order-item {
            display: flex;
            gap: 20px;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s ease-in-out;
        }

        .order-item:hover {
            transform: scale(1.05);
        }

        .order-image {
            width: 100px;
            height: 100px;
            object-fit: cover;
            border-radius: 8px;
        }

        .order-content {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .order-title {
            font-size: 1.2rem;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .order-info {
            display: flex;
            flex-direction: column;
            gap: 5px;
            margin-bottom: 10px;
        }

        .order-status {
            font-weight: bold;
            color: #28a745;
        }

        footer {
            margin-top: auto;
        }

       .container {
    width: 1188px;
    max-width: 100%;
    padding-left: 10px;
    padding-right: 30px;
    margin-inline: -117px;
}
    </style>
</head>
<body>
    <div class="sidebar">
        <!-- Add your sidebar links here -->
        <a href="#">Dashboard</a>
        <a href="#">Orders</a>
        <a href="#">Products</a>
        <a href="#">Customers</a>
        <a href="#">Reports</a>
        <a href="#">Settings</a>
    </div>

    <div class="main-content">
        <!-- <header>
            <h1>Admin Panel</h1>
        </header> -->
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="orders-container">
                        <h2>Order Details</h2>
                        <div class="order-item">
                            <div class="order-content">
                                <div>
                                    <h2 class="order-title">Order # <%=orderData?.orderNumber%></h2>
                                    <div class="order-info">
                                        <p><strong>Order Date:</strong> <%=orderData?.orderDate.toLocaleDateString()%> </p>
                                        <p><strong>Mode of Payment:</strong><%=orderData?.paymentType%></p>
                                        <p><strong>Total Amount:</strong> ₹ <%=orderData?.grandTotalCost%></p>
                                    </div>
                                </div>
                                <p class="order-status">Status: <%=orderData?.orderStatus%></p>
                            </div>
                        </div>                
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="orders-container">
                        <h2>Address</h2>
                        <div class="order-item">
                            <div class="order-content">
                                <div>
                                    <div class="order-info">
                                        <p><strong>Name:</strong><%=orderData?.addressChosen.name%> </p>
                                        <p><strong>Phone Number:</strong><%=orderData?.addressChosen.phone%> </p>
                                        <p><strong>House Number:</strong><%=orderData?.addressChosen.houseNumber%> </p>
                                        <p><strong>State:</strong><%=orderData?.addressChosen.state%> </p>
                                        <p><strong>City:</strong><%=orderData?.addressChosen.city%> </p>
                                    </div>
                                </div>
                            </div>
                        </div>                
                    </div>
                </div>
            </div>

            <div class="orders-container">
                <h2>Product Details</h2>
                <div class="order-details">
                    <% orderData.cartData.forEach((data) => { %>
                    <div class="order-item">
                        <img src="/adminassets/uploads/<%=data?.productId?.productImage[0]%>" alt="Product Image" class="order-image">
                        <div class="order-content">
                            <div>
                                <div class="order-info">
                                    <p><strong>Product:</strong><%=data?.productId?.productName%></p>
                                    <p><strong>Quantity:</strong><%=data?.productQuantity%></p>
                                    <p><strong>Price:</strong> ₹<%=data?.productId?.productPrice%> </p>
                                    <p><%= data?.singleOrderstatus %></p>

                                </div>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>
        </div>
       
    </div>
   
    <!-- Plugins JS File -->
    <script src="assets/js/jquery.min.js"></script>
    <script src="assets/js/bootstrap.bundle.min.js"></script>
    <script src="assets/js/jquery.hoverIntent.min.js"></script>
    <script src="assets/js/jquery.waypoints.min.js"></script>
    <script src="assets/js/superfish.min.js"></script>
    <script src="assets/js/owl.carousel.min.js"></script>
    <!-- Main JS File -->
    <script src="assets/js/main.js"></script>
</body>
</html>
